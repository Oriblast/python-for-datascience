<SignupPage>:
    orientation:"vertical"
    canvas.before:
        Color:
            rgb: hex(bleu)
        Rectangle:
            pos:self.pos
            size:self.size
    Label:
        canvas.before:
            Color:
                rgba: 0,0,0,0.75
            Rectangle:
                pos:self.pos
                size:self.size
        text:"creer un nouveau compte"
        font_size:extra
        font_name: acme
        size_hint:1,0.1 #en pourcentage
    FloatLayout:
        orientation:"horizontal"
        Button:
            text:"<-BACK"
            on_press: app.manage.current="home"
            size_hint: 0.05, 0.04
            background_normal:"images/button_background.png"
            pos_hint: {"center_x":0.08,"center_y":0.97}
        Image:
            source:"images/docteur_2.png"
            size_hint:0.5, 1
            pos_hint: {"center_y":0.53}
        FloatLayout:
            orientation:"vertical"
            canvas.before:
                Color:
                    rgb:hex(blanc)
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius: radius_, radius_
            size_hint:0.7, 0.7
            pos_hint:{"center_x": 0.5, "center_y": 0.47}
            BoxLayout:
                orientation:"vertical"
                pos_hint:{"center_x":0.5, "center_y":0.60}
                spacing: dp(60)
                padding: dp(10), dp(40)
                BoxLayout:
                    orientation:"horizontal"
                    size_hint:0.5 ,0.08
                    pos_hint:{"center_x":0.5, "y":0.5}
                    Label:
                        text:"pseudo"
                        color:0,0,0
                        font_size:medium
                        font_name:amble_italic
                        text_size:self.size
                        valign:"middle"
                        halign:"right"
                    TextInput:
                        id:pseudo
                        hint_text:"Pseudo"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                BoxLayout:
                    orientation:"horizontal"
                    size_hint:1, 0.08
                    spacing: dp(10)
                    pos_hint:{"center_x":0.5, "top":0.85}
                    TextInput:
                        id:nom_prenom
                        hint_text:"Nom & Prenom"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                    TextInput:
                        id:age
                        hint_text:"Age"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                    Spinner:
                        id:sex
                        text:"Sex"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                        values:"Homme", "Femme"
                        background_normal: "images/button_background.png"
                    TextInput:
                        id:travail
                        hint_text:"Travail"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                BoxLayout:
                    orientation:"horizontal"
                    size_hint:1, 0.08
                    spacing: dp(10)
                    TextInput:
                        id:taille
                        hint_text:"Taille(cm)"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                    TextInput:
                        id:poids
                        hint_text:"Poids (kg)"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                BoxLayout:
                    orientation:"horizontal"
                    size_hint:1, 0.08
                    spacing: dp(10)
                    TextInput:
                        id:password
                        hint_text:"mot de passe"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                        password:True
                    TextInput:
                        id:passrep
                        hint_text:"Répété le mot de passe"
                        font_name:amble_regular
                        text_size: self.size
                        halign:'center'
                        valign:"middle"
                        multiline:False
                        write_tab:False
                        password:True
                        password_mask:"@"
            Button:
                text:"Creer un compte"
                background_normal:"images/button_background.png"
                size_hint:0.4, 0.09
                pos_hint:{"right":0.98, "y":0.04}
                font_size:medium
                font_name:acme
                on_press:app.manage.check_signup(pseudo.text, password.text, passrep.text, nom_prenom.text, age.text, sex.text, taille.text, poids.text, travail.text); root.check_info(redflag)

    Label:
        canvas.before:
            Color:
                rgb:1,0,0
            Rectangle:
                pos:self.pos
                size:self.size
        text:"error"
        id:redflag
        opacity:0
        size_hint: 1, 0.03