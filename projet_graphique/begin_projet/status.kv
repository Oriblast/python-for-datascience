<Status>:
    FloatLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            canvas.before:
                Color:
                    rgb: hex(bleu)
                Rectangle:
                    pos:self.pos
                    size:self.size
        FloatLayout:
            Button:
                text:"<-BACK"
                on_press: app.manage.current="index"
                size_hint: 0.05, 0.04
                background_normal:"images/button_background.png"
                pos_hint: {"center_x":0.08,"center_y":0.97}
            Image:
                source:"images/linda.png"
                size_hint:0.4, 1
                pos_hint: {"center_x":0.1,"center_y":0.5}
        BoxLayout:
            orientation:"horizontal"
            Label:
                size_hint: 0.2, 0.2
                pos_hint: {"center_x": 0.5, "center_y":0.95}
                canvas.before:
                    Color:
                        rgba:0,0,0,0.75
                    Rectangle:
                        pos:self.pos
                        size:self.size
                text:"Etat de santÃ©"
                font_name: acme
                font_size: medium
        BoxLayout:
            orientation:"horizontal"
            Label:
                text_size:self.size
                size_hint: 0.2, 0.1
                pos_hint: {"center_x": 0.5, "center_y":0.75}
                text:"Etat : " + root.status
                font_name: acme
                font_size: medium
                halign:"center"
                valign:"middle"
        BoxLayout:
            orientation:"horizontal"
            Label:
                size_hint: 0.2, 0.5
                pos_hint: {"center_x": 0.5, "center_y":0.65}
                text:"  Cause : "+root.cause
                text_size:self.size
                font_name: acme
                font_size: medium
                halign:"center"
                valign:"middle"
        BoxLayout:
            #orientation:"horizontal"
            Label:
                text_size:self.size
                size_hint: 0.2, 1
                pos_hint: {"center_x": 0.4, "center_y":0.55}
                text:"      Conseils : "+root.conseil
                font_name: acme
                font_size: medium
                halign:"center"
                valign:"middle"
